def percid_from_k(wildcards):
	min_len = min_lens[0]
	highest_e = 1
	for e in range(2, 16):
		if ((min_len - int(wildcards.k) + 1) - int(wildcards.k) * e) < 0:
			print("percid:" + str(100 - (highest_e / min_len) * 100))
			return 100 - (highest_e / min_len) * 100
		highest_e = e

