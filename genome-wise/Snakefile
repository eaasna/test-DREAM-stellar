def get_shape_threshold(wildcards):
	min_len = int(wildcards.min_len)
	shape = wildcards.s
	errors = int(wildcards.er)
	
	shape_size = len(shape)
	shape_weight = shape.count("1")
	
	if errors == 1:
		threshold = 13
	elif errors == 2:
		threshold = 8
	else:
		threshold = 7
	print(shape + " has threshold " + str(threshold) + " for " + str(errors) + " errors")	
	return threshold

